<div class="header p-3 mb-5 bg-secondary">
  <a class="nav-bar text-white" href="/" style="text-decoration: none">Random Password Generator</a>
</div>
<form action="/" method="post">
  <div class="card w-50 mx-auto">
    <div class="card-body">
      <h2 class="card-title">
        Random Password Generator
        <i class="fa-solid fa-key"></i>
      </h2>
      <hr>
      <div class="mb-3 row justify-content-between">
        <label for="password-length" class="col-sm-4 col-form-label">
          Password Length
        </label>
        <div class="col-sm-8">
          <input type="number" class="form-control" id="password-length" name="password-length" max="16" min="4">
          <div class="form-text">
            Length is available between 4 ~ 16
          </div>
        </div>
      </div>
      <div class="mb-3 d-flex flex-row align-items-center">
        <span class="col-4">
          Include Lowercase Characters
        </span>
        <div class="form-check ms-2">
          <input class="form-check-input" type="checkbox" value="" id="check-lowercase">
          <label class="form-check-label" for="check-lowercase">
            (e.g. abcdefg)
          </label>
        </div>
      </div>

      <div class="mb-3 d-flex flex-row align-items-center">
        <span class="col-4">
          Include Uppercase Characters
        </span>
        <div class="form-check ms-2">
          <input class="form-check-input" type="checkbox" value="" id="check-uppercase">
          <label class="form-check-label" for="check-uppercase">
            (e.g. ABCDEFG)
          </label>
        </div>
      </div>
      <div class="mb-3 d-flex flex-row align-items-center">
        <span class="col-4">
          Include Numbers
        </span>
        <div class="form-check ms-2">
          <input class="form-check-input" type="checkbox" value="" id="check-numbers">
          <label class="form-check-label" for="check-numbers">
            (e.g. 123456)
          </label>
        </div>
      </div>
      <div class="mb-3 d-flex flex-row align-items-center">
        <span class="col-4">
          Include Symbols
        </span>
        <div class="form-check ms-2">
          <input class="form-check-input" type="checkbox" value="" id="check-symbols">
          <label class="form-check-label" for="check-symbols">
            (e.g. @#$%)
          </label>
        </div>
      </div>
      <div class="mb-3 row justify-content-between">
        <label for="exclude-characters" class="col-sm-4 col-form-label">
          Exclude Characters
        </label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="exclude-characters" name="exclude-characters">
          <div class="form-text">
            These characters will not appear in the password
          </div>
        </div>
      </div>
      <div class="generate-password p-3 mb-2 d-flex flex-nowrap">
        <div>Your password is: </div>
        <div class="text-danger ms-3">You must select at least one character set</div>
      </div>
      <button type="submit" value="submit" class="btn btn-success mb-3">
        Generate Password
      </button>
    </div>
    <small class="card-footer text-muted text-end">
      Idea is inspired by
      <a href="https://passwordsgenerator.net/" class="fw-bold" target="_blank" style="text-decoration: none">
        Strong Random password
      </a>
    </small>
  </div>
</form>